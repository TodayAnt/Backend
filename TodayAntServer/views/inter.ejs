<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="/css/inter.css" />
    <script src="http://code.jquery.com/jquery-1.10.2.js"></script>
    <script>
      $(document).ready(function(){
        function ajaxList() {
            console.log('ajax func start');
            $.ajax({
                url: '/interest/data',
                dataType: 'json',
                type: 'GET',
                data: '',
                success: function(result) {
                    if (result) {
                      console.log(result.interests);
                      makeList(result.interests);
                    }
                }
            });
            setTimeout(function(){$('#mylist').empty();ajaxList()},20000);
        }
        ajaxList();
      });
    </script>
    <title>
      할일 목록
    </title>
  </head>
  <body>
    <div class="container">
      <div class="input-container">
        <input id="input">
        <button id="add-button">추가</button>
      </div>
      <form id="interest" action="/interest" method="POST">
        <div class="list-container">
          <h1>관심종목</h1>
          <ul id="list">
          </ul>
        </div>
        <button id="add-button" onclick="document.getElementById('interest').submit()">저장</button>
      </form>
      <div class="list-container">
        <h1>나의관심종목</h1>
        <ul id="mylist">
        </ul>
      </div>
    </div>
  </body>
  <script src="/js/inter.js"></script>
</html>